<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/team_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ncolas.activitystarter.TelaTorneio"
    tools:showIn="@layout/activity_tela_torneio">

    <TextView
        android:id="@+id/tv_choose_robot"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_weight="4"
        android:layout_marginTop="20dp"
        android:text="Choose your Robot"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_category"
        android:spinnerMode="dropdown"
        android:entries="@array/categories"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        />

    <LinearLayout
        android:id="@+id/robots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:paddingTop="5dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/MetalGarurumon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/white"
            android:background="@drawable/garurumon"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"
            />

        <ImageButton
            android:id="@+id/Lobo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lobo"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"
             />

        <ImageButton
            android:id="@+id/Bernadete"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bernadette"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"
             />

        <ImageButton
            android:id="@+id/Sonic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sonic"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
             />

        <ImageButton
            android:id="@+id/Sombra"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tails"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
             />

        <ImageButton
            android:id="@+id/Tonto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tonto"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/Lego"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lego"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
             />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/team_color"
            android:layout_weight="40"
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:id="@+id/robot_name"
                />

            <Button
                android:id="@+id/goStrategy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                style="@style/RbButton.Inverse.Blue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:onClick="goStrategy"
                />

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fab_menu_robot_settings"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                fab:menu_animationDelayPerItem="55"
                fab:menu_backgroundColor="@android:color/transparent"
                fab:menu_buttonSpacing="0dp"
                fab:menu_colorNormal="#da3c2f"
                fab:menu_colorPressed="#dc4b3f"
                fab:menu_colorRipple="#99d4d4d4"
                fab:menu_fab_label="Robot Settings"
                fab:menu_fab_size="normal"
                fab:menu_icon="@drawable/ic_settings_white_36dp"
                fab:menu_labels_colorNormal="#333"
                fab:menu_labels_colorPressed="#444"
                fab:menu_labels_colorRipple="#66efecec"
                fab:menu_labels_cornerRadius="3dp"
                fab:menu_labels_ellipsize="none"
                fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                fab:menu_labels_margin="0dp"
                fab:menu_labels_maxLines="-1"
                fab:menu_labels_padding="8dp"
                fab:menu_labels_position="left"
                fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                fab:menu_labels_showShadow="false"
                fab:menu_labels_singleLine="false"
                fab:menu_labels_textColor="#f2f1f1"
                fab:menu_labels_textSize="15sp"
                fab:menu_openDirection="up"
                fab:menu_shadowColor="#66aff198"
                fab:menu_shadowRadius="4dp"
                fab:menu_shadowXOffset="1dp"
                fab:menu_shadowYOffset="4dp"
                fab:menu_showShadow="false">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item_add_robot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus_white_18dp"
                    fab:fab_label="Add Robot"
                    fab:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item_update_robot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pencil_white_18dp"
                    fab:fab_label="Edit Robot"
                    fab:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item_delete_robot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_white_18dp"
                    fab:fab_label="Delete Robot"
                    fab:fab_size="mini" />
            </com.github.clans.fab.FloatingActionMenu>

        </RelativeLayout>
</LinearLayout>
