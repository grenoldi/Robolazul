<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/team_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ncolas.activitystarter.TelaTorneio"
    tools:showIn="@layout/activity_tela_torneio">

    <TextView
        android:id="@+id/tv_choose_robot"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:text="Choose your Robot"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/sp_category"
        android:spinnerMode="dropdown"
        android:entries="@array/categories"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        />


    <LinearLayout
        android:id="@+id/robots"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingBottom="40dp"
        android:paddingTop="80dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/MetalGarurumon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/white"
            android:background="@drawable/garurumon"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"
            />

        <ImageButton
            android:id="@+id/Lobo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lobo"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"


             />

        <ImageButton
            android:id="@+id/Bernadete"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bernadette"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="visible"


             />

        <ImageButton
            android:id="@+id/Sonic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sonic"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
             />



        <ImageButton
            android:id="@+id/Sombra"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tails"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"

             />

        <ImageButton
            android:id="@+id/Tonto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tonto"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/Lego"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lego"
            android:buttonTint="@color/white"
            android:gravity="center_horizontal"
            android:onClick="showRobotName"
            android:visibility="gone"
             />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:id="@+id/robot_name"/>

<Button
    android:id="@+id/goStrategy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ok"
    android:textSize="15sp"
    android:textColor="@color/white"
    android:backgroundTint="@color/colorPrimary"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="50dp"
    android:onClick="goStrategy"
    />


</LinearLayout>
