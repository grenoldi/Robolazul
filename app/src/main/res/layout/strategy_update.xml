<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_vertical"
    >

    <EditText
        android:id="@+id/strategy_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Strategy ID"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        />

    <EditText
        android:id="@+id/new_strategy_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/type_in_new_strategy_name"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        />

    <EditText
        android:id="@+id/new_character"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/type_in_new_character_to_send"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        />


</LinearLayout>
